<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns:p="http://www.springframework.org/schema/p"
xmlns:c="http://www.springframework.org/schema/c"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd">



<bean id="customer" class="petstoreproject.petstoreapp.Customer" p:firstName="John">

<property name="lastName" value="Scott"/>
<property name="age" value="23"/>
</bean>

<bean id="ncustomer" class="petstoreproject.petstoreapp.Customer" c:firstName="Peter" c:lastName="ABC" c:age="23">

</bean>

</beans>